
<%- include('../partials/headhtml', {pagecss: "home-body"}) %>

<%- include('../partials/header-client') %>

<body style="background-color: #EBEBEB;">
   


    <section class="container-main">
        <div class="row article justify-content-center">
        
           <%if(producto!="error"){ %>

            
            <% for(var item of producto){ %>
                <div class="col-md-5 col-lg-3 article-image">
                    <a href="/detalle-producto/<%=item.id%>"><div class="item">
                    <img src='/images/products/<%=item.imagenes[0]%>' alt="" srcset="">
                    <hr width="90%">
                    <div class="row article-name-cont">
                        <div class="article-name">
                            <p class="title"><%= item.title %></p>
                            <%if(item.codOferta=="Si"){%>
                                <p class="tachado">$<%= item.price %></p><span class="precioDesc"><% var pd = (item.price*item.descuento)/100; %>$<%=pd%></span><span class="desc"><%=item.descuento%>% OFF</span> <span class="precioDescuento"></span>
                            <%}else{%>
                                <p>$<%= item.price %></p>
                            <%}%>
                            
                        </div>
                    </div>
                </div>
            </a>
                </div>
            <%}%>

        <%} else{%>
            <h3>NO HAY PRODUCTOS PARA MOSTRAR</h3>
        <%}%>
        </div>
    </section>


<!-- ***********  footer  ************   -->
<%- include('../partials/footer'); %>


<script>
    
    function showFilter()
    {
        var menu = document.querySelector(".filtro");
        if(menu.style.display === "none"){
            menu.style.display = "inherit";
        }
        else
        {
            menu.style.display ="none";
        }
    }
</script>
</body>
</html>